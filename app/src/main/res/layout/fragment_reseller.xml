<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardfragments.childfragments.ResellerFragment"
    android:orientation="vertical"
    android:background="@color/colorBackGroundGrey"
    android:gravity="top">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/resellerdirectadmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/resellerhosting1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DirectAdmin"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reseller Hosting"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="Explore"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/resellercpanel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/resellerhosting1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cPanel"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorRed"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reseller Hosting"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="Explore"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>


