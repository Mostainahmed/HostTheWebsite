<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundGrey"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".dashboardfragments.SupportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Open A New Ticket"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/billingsection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/billingdepartment"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 am - 10 pm"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat - Thu"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Department"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_create_a_ticket"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/supportsection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/supportdepartment"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 Hours"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="365 Days"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support Department"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_create_a_ticket"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/salessection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/salesdepartment"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 am - 10 pm"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat - Thu"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales Department"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_create_a_ticket"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/developerteam"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/vpsserver1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 am - 7 pm"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat - Thu"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorGreen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developer Team"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_create_a_ticket"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Others"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/mytickets"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/mytickets"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Tickets"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_explore"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/supportblogs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/blog"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support Blogs"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_explore"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/supportvideos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/supportvideos"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support Videos"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_explore"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/networkstatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/networkstatus"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Network Status"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_explore"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>