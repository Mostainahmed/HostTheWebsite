<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/colorBackGroundGrey"
    android:id="@+id/package_linear_layout"
    tools:context=".dashboardfragments.PackageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/shared_hosting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/sharedhosting1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared Hosting"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/reseller_hosting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/resellerhosting1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reseller Hosting"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/cloud_hosting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/cloudhosting1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cloud Hosting"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/vps_hosting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/vpsserver1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VPS Servers"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/dedicated_servers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/dedicatedserver1"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dedicated Servers"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/domainregistration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/domain"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Domain Registration"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/webdevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/webdevelopment"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Web Development"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/appdevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:src="@drawable/appdevelopmet"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Development"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/title_see_more"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>