<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".dashboardfragments.childfragments.WebDevFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/news_site"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="News Site"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorTextWhite"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Static Pages"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional Look"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".com Domain"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 GB Hosting"
                            android:paddingBottom="2dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="5 Corporate Email Address"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="Delivery Time: 2 Days"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="Get A Quote"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/ecommerce_site"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Ecommerce Site"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorTextWhite"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Product Category"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="Customer can buy through Website"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="Order Management System"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text=".com Domain"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="5 Days Delivery"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="@string/tirget_a_quote"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:padding="0dp"
                        android:id="@+id/blog_site"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Blog Site"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorTextWhite"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 Static Pages"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional Look"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".com Domain"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500 MB Hosting"
                            android:paddingBottom="2dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="2 Corporate Email Address"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="Delivery Time: 1 Days"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorPrimary"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingBottom="0dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:text="Get A Quote"
                            android:textStyle="bold"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            android:textColor="@color/colorTextWhite"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>



